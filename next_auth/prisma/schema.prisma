generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  email      String   @unique
  phone      String?
  password   String
  role       String   @default("user")
  createdAt  DateTime @default(now())

  resetToken   String?   
  resetExpires DateTime? 
}

